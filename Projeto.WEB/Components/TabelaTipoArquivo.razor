<div class="tabela">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>Guardar por</th>
                <th>Tempo</th>
                <th>Suporte a Item</th>
                <th>Suporte a Caixa</th>
                <th>Ativo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(TipoArquivosView?.Dados is not null)
            {
                @foreach (var tipoArquivo in TipoArquivosView.Dados)
                {
                    <tr>
                        <td>@tipoArquivo.Id</td>
                        <td>@tipoArquivo.Descricao</td>
                        <td>@tipoArquivo.Guardar</td>
                        <td>@tipoArquivo.Tempo</td>
                        <td>@tipoArquivo.SuporteItem</td>
                        <td>@tipoArquivo.SuporteControleCaixa</td>
                        <td>@tipoArquivo.Ativo</td>
                        <td>
                            <a href="#">Editar</a> |
                            <a href="#">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public TipoArquivoView? TipoArquivosView { get; set; }
}
