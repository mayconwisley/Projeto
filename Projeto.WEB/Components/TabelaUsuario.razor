<div class="tabela">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Nome</th>
                <th>Autorização</th>
                <th>Ativo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Usuarios is not null)
            {
                @foreach (var usuario in Usuarios)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Autorizacao</td>
                        <td>@usuario.Ativo</td>
                        <td>
                            <a href="#">Editar</a> |
                            <a href="#">Excluir</a>
                        </td>
                    </tr>
                }
            }
            
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public List<UsuarioOutputDto>? Usuarios { get; set; }
}
