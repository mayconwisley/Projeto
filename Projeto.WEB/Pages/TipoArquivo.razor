@page "/TipoArquivo"
@inject ITipoArquivoServices tipoArquivoServices;
@inject ITIpoAquivoLocalStorageServices tipoArquivoLocalStorageService;

<PageTitle>Tipos de Arquivos</PageTitle>
<h3>Lista Tipo Arquivo</h3>
<a href="NovoTipoArquivo" class="btn btn-info">Novo Tipo</a>

@if (tipoArquivoView is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <TabelaTipoArquivo TipoArquivosView="tipoArquivoView"></TabelaTipoArquivo>
}

@code {

    public TipoArquivoView? tipoArquivoView = new();
    protected override async Task OnInitializedAsync()
    {
        try
        {
            tipoArquivoView = await tipoArquivoLocalStorageService.PegarTiposArquivosStorage();
        }
        catch (Exception)
        {
            throw;
        }
    }

}